<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	
	<display-name>WEB Enterprise Application</display-name>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/config/spring/root-context.xml
			/WEB-INF/config/spring/security.xml
		</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.pyrube.wea.WeaConfigLoader</listener-class>
	</listener>

	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/jsea/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/misc/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/authen/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/demo/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/user/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/acct/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/dict/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/txn/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/message/*</url-pattern>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>
	
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/resources/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/config/spring/servlet-context.xml,
				/WEB-INF/config/spring/orm-context.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>400</error-code>
		<location>/message/http/400</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/message/http/403</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/message/http/404</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/message/http/500</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/message/http/503</location>
	</error-page>
	
	<jsp-config>
		<taglib>
			<taglib-uri>wea-one</taglib-uri>
			<taglib-location>/WEB-INF/tlds/wea-one.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>jsea-component</taglib-uri>
			<taglib-location>/WEB-INF/tlds/jsea-component.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>jsea-element</taglib-uri>
			<taglib-location>/WEB-INF/tlds/jsea-element.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>jstl-core</taglib-uri>
			<taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>tiles</taglib-uri>
			<taglib-location>/WEB-INF/tlds/tiles-jsp.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>